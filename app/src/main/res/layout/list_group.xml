<?xml version="1.0" encoding="utf-8"?>
<com.cbu.dunckel.rushhour.CustomLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/screenLayout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="#00ffffff"
    android:orientation="vertical"
    android:padding="8dp"
    android:backgroundDimEnabled="true">

    <RelativeLayout
        android:id="@+id/headerContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/leftUpperSec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/waitTimeContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/lblWaitTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="Roboto regular"
                    android:shadowColor="#000000"
                    android:shadowDx="2.5"
                    android:shadowDy="2.5"
                    android:shadowRadius="5"
                    android:textSize="24sp"/>

                <TextView
                    android:id="@+id/minLbl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:fontFamily="Roboto regular"
                    android:shadowColor="#000000"
                    android:shadowDx="2.5"
                    android:shadowDy="2.5"
                    android:shadowRadius="5"
                    android:text="min"
                    android:textColor="#ffffff"
                    android:textSize="24sp"/>

            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10sp"
                android:layout_toRightOf="@id/waitTimeContainer"
                android:background="#ffffff"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/leftUpperSec"
            android:gravity="center"
            android:paddingLeft="?android:attr/expandableListPreferredItemPaddingLeft">

            <TextView
                android:id="@+id/lblListHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:fontFamily="Roboto regular"
                android:gravity="center"
                android:shadowColor="#000000"
                android:shadowDx="2.5"
                android:shadowDy="2.5"
                android:shadowRadius="5"
                android:textColor="#ffffff"
                android:textSize="35sp"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/lblHours"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/lblListHeader"
                android:layout_gravity="center"
                android:fontFamily="Roboto-Light"
                android:shadowColor="#000000"
                android:shadowDx="2.5"
                android:shadowDy="2.5"
                android:shadowRadius="5"
                android:textColor="#ffffff"
                android:textSize="20dip"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/arrowView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:gravity="center"
                android:src="@drawable/down_arrow"
                android:tint="#ffffff"
                android:layout_centerVertical="true"/>

            <ImageButton
                android:id="@+id/menuBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/lblHours"
                android:layout_alignRight="@+id/lblHours"
                android:layout_below="@id/lblListHeader"
                android:layout_marginRight="20dp"
                android:background="@null"
                android:src="@drawable/btn_menu"
                android:text="Menu"
                android:visibility="gone"
                />


        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/headerContent"
        android:gravity="center"
        android:visibility="gone"
        android:background="#B3ffffff">

        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/chart"
            android:layout_width="match_parent"
            android:layout_height="350dp"/>


    </RelativeLayout>


</com.cbu.dunckel.rushhour.CustomLayout>